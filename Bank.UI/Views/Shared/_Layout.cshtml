@{
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("Token"));
    var userName = User.Identity?.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bank.UI</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (for profile icon) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (isLoggedIn)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
                <div class="container-fluid">
                    <!-- Brand -->
                    <a class="navbar-brand fw-bold"
                       asp-controller="Dashboard"
                       asp-action="Index">
                        <i class="bi bi-bank"></i> Bank.UI
                    </a>
x

                    <!-- Toggle -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#bankNavbar" aria-controls="bankNavbar"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Navbar Content -->
                    <div class="collapse navbar-collapse" id="bankNavbar">

                        <!-- Left Menus -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <!-- Dashboard -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    Dashboard
                                </a>
                            </li>

                            <!-- Accounts -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                    Accounts
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Accounts" asp-action="Index">
                                            My Accounts
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Accounts" asp-action="Create">
                                            Open New Account
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Accounts" asp-action="Statements">
                                            Account Statements
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Transactions -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                    Transactions
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Transactions" asp-action="Transfer">
                                            Fund Transfer
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Transactions" asp-action="History">
                                            Transaction History
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Loans -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                    Loans
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Loans" asp-action="Apply">
                                            Apply for Loan
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Loans" asp-action="MyLoans">
                                            My Loans
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Admin (optional role-based later) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            Manage Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Reports">
                                            Reports
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <li class="nav-item me-2">
                            <button id="darkModeToggle"
                                    class="btn btn-sm btn-outline-light"
                                    type="button"
                                    title="Toggle Dark Mode">
                                <i class="bi bi-moon-fill"></i>
                            </button>
                        </li>
                        <!-- Right Side Profile -->
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center"
                                   href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle fs-4 me-1"></i>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <span>
                                            @User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                        </span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Settings">
                                            <i class="bi bi-gear"></i> Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Logout" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container-fluid mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2026 - Bank.UI | Secure Banking Application
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

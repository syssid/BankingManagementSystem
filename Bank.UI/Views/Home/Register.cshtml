@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register - Bank.UI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login_registration.css" asp-append-version="true" />

</head>

<body>
    <div class="register-card">
        <div class="text-center mb-4">
            <div class="brand">🏦</div>
            <p class="text-muted">Create your account</p>
        </div>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input name="FullName" type="text" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="Email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input name="Password" type="password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input name="ConfirmPassword" type="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="bi bi-person-plus"></i> Register
            </button>

            <div class="text-center">
                <span class="text-muted">Already have an account?</span>
                <a asp-action="Index" class="link fw-bold"> Login</a>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.Error
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Success
                </div>
            }
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
